//archive post
#days {
    display: block;
    color: #FFA0A0;
    font-size: 13px;
    margin-top: 15px;
}
.posts-collapse::after{
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 4px;
    height: 100%;
    background: #f5f5f5;
    margin-left: -4px;
    background-image: linear-gradient(180deg,#f79533 0,#f37055 15%,#ef4e7b 30%,#a166ab 44%,#5073b8 58%,#1098ad 72%,#07b39b 86%,#6dba82 100%);
}
