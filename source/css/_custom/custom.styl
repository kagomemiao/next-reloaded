.sidebar{
    background: url(/images/sidebg.png);
    background-color: rgba(255,255,255,.72);
    box-shadow: 0 0 4px rgba(0,0,0,.2);    
}
.overlay{
    width: 100%;
    height: 100%;
    background-color: rgba(74,75,77,0.8)
    z-index: -1;
    position: absolute;
}
.player-container{
    margin-top: 20px;
}

#side-aplayer{
    color:#fff;
    line-height: 3;
}

.aplayer .aplayer-list ol li{
    text-align: left;
}
.aplayer-time{
    right:10px !important;
}
.aplayer-bar-wrap{
    margin:0 7px 0 1px !important;
    padding:3px 0 !important;
}
.aplayer-lrc{
    left:-5px;
    width:100%;
}

// canvas-line
.canvas-line{
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
    width: 100%;
    height: 334px;
    pointer-events: none;
}
// hexo-douban
.hexo-douban-item{
    background-color: rgba(255,255,255,0.8);
    min-height: 150px !important;
    border-bottom: 6px #fcfbf4 solid !important;    
}
.hexo-douban-picture{
    left: 15px !important;
    top: 15px !important;    
}
.hexo-douban-info{
    padding-left: 130px !important;
}
