// Custom styles.
canvas {
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100%;
    height: 334px;
    pointer-events: none;
}
.brand{
	background:#ff6262;
}
#header{
	background-image: url(/images/bite.png);
    background-repeat: no-repeat;
    background-size: 20%;
    background-position: right;
}
.custom-logo-site-title{
	opacity:0.6;
}
.site-subtitle{
    font-family: 'Barrio', 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
}
.sidebar-toggle{
    left:30px;
}
.sidebar{
    left:0;
}
#days {
    display: block;
    color: #FFA0A0;
    font-size: 13px;
    margin-top: 15px;
}
.posts-collapse::after{
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 4px;
    height: 100%;
    background: #f5f5f5;
    margin-left: -4px;
    background-image: linear-gradient(180deg,#f79533 0,#f37055 15%,#ef4e7b 30%,#a166ab 44%,#5073b8 58%,#1098ad 72%,#07b39b 86%,#6dba82 100%);
}
